{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install --upgrade pip && pip install -r requirements.txt && cp main2.py /app/bot.py"
  },
  "deploy": {
    "startCommand": "gunicorn --bind :8080 --workers 1 --threads 8 --timeout 0 bot:app",
    "variables": {
      "BOT_TOKEN": {
        "description": "Токен из @BotFather",
        "required": true
      },
      "DATABASE_PATH": {
        "value": "/data/database.db",
        "description": "Путь к БД"
      },
      "PORT": {
        "value": "8080",
        "description": "Порт для приложения"
      },
      "WEBHOOK_URL": {
        "description": "Публичный адрес Railway (без https://)",
        "required": true
      }
    }
  }
}
